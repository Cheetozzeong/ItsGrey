<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:versionCode="1"
    android:versionName="1.0.1">
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.tntt.itsgrey.ItsGreyApplication"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.ItsGrey"
        tools:targetApi="31">

        <activity
            android:name="com.tntt.itsgrey.FirstActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tntt.itsgrey.LoginActivity"
            android:exported="true">
        </activity>
        <activity
            android:name="com.tntt.itsgrey.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.ItsGrey.NoActionBar">
        </activity>
    </application>

</manifest>